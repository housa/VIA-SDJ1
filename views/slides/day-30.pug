    section
      h2 Border layout
      ul
        li Only one component can be added to each region (North, West, Center, East, South)
          ul
            li A JPanel is a component, so the one component in a region can contain many other components
      div.split-2-3-left
        pre
          code.java.
            //border layout is default for JFrame
            JButton btn1 = new JButton("Button 1");
            add(btn1, BorderLayout.NORTH);
            JButton btn2 = new JButton("Button 2");
            add(btn2, BorderLayout.WEST);
            JButton btn3 = new JButton("Button 3");
            add(btn3, BorderLayout.CENTER);
            JButton btn4 = new JButton("Button 4");
            add(btn4, BorderLayout.EAST);
            JButton btn5 = new JButton("Button 5");
            add(btn5, BorderLayout.SOUTH);
